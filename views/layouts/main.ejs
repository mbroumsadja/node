              <h4>TO DAY</h4>
        </div>
    </a>

     <a href="/week">
        <div class="items">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <rect x="2" y="4" width="20" height="16" rx="2" fill="none" stroke="currentColor" stroke-width="2"/>
                <line x1="2" y1="9" x2="22" y2="9" stroke="currentColor" stroke-width="2"/>
                <line x1="7" y1="4" x2="7" y2="20" stroke="currentColor" stroke-width="1"/>
                <line x1="12" y1="4" x2="12" y2="20" stroke="currentColor" stroke-width="1"/>
                <line x1="17" y1="4" x2="17" y2="20" stroke="currentColor" stroke-width="1"/>
              </svg>
              <h4>WEEK</h4>
        </div>
     </a>
    </div>


    <main>

<% if (nom.length >0) { %>

  <p style="font-size:2rem; margin-bottom: 2rem;text-transform: uppercase;">Voici Ton Emplois de Temps <span style="color: rgb(0, 217, 255); background: rgba(0, 0, 0, 0.692);"><%= nom %></span></p>
<% } %>

      <% if (seance.length > 0) { %>
        <% seance.forEach(data => { %>
          <div>
            <h2><%= data.nomCours %></h2>
            <p><%= data.codeUnite %></p>
            <p><%= data.debut %></p>
            <p><%= data.fin %></p>
            <p><%= data.jourCour %></p>
            <p><%= data.salleCour %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>aucune seances disponible</p>
       
      <% } %>

      
    </main>
</body>
</html>